{
  "extends": [
    "config:js-lib",
    ":rebaseStalePrs",
    ":automergeMinor",
    ":label(internal)",
    ":masterIssue",
    ":enableVulnerabilityAlerts"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": "at any time",
    "stabilityDays": 0
  },
  "stabilityDays": 3,
  "prCreation": "not-pending",
  "packageRules": [
    {
      "packageNames": ["@tanem/svg-injector", "tanem-scripts"],
      "prCreation": "immediate",
      "stabilityDays": 0
    }
  ]
}
